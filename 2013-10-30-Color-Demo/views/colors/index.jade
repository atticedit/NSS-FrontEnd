extends ../template/layout

block content
  .row
    .small-12.columns
      h1 Color Page
  .row
    .small-12.columns
      a.button.small.radius(href='/') Home Page
  .row
    - var width = (100 / colors.length)
    .small-12.columns
      table#colors
          thead: tr
            each color in colors
              th= color
          tbody: tr
            each color in colors
              td.color(style='background-color:#{color}; width: #{width}%;')