.row
  .small-12.columns
    %h2 Calculator
.row#calculations
  .small-2.columns
    %input#op1{type: 'text', autofocus: true}
  .small-1.columns
    %input#operator{type: 'text'}
  .small-2.columns
    %input#op2{type: 'text'}
  .small-2.columns
    %input#calculate.small.button.radius.success{type: 'button', value: 'Calculate'}
  .small-1.columns
    %h6 Result:
  .small-2.columns
    %input#result{type: 'text', readonly: true}
  .small-2.columns
.row#getters
  .small-3.small-offset-2.columns
    %input#getSum.small.button.radius{type: 'button', value: 'Get Sum'}
  .small-2.columns
    %input#sum{type: 'text', readonly: true}
  .small-3.columns
    %input#getProduct.small.button.radius{type: 'button', value: 'Get Product'}
  .small-2.columns
    %input#product{type: 'text', readonly: true}
  .small-2.columns
.row
  .small-3.small-offset-2.columns
    %input#removeNegatives.small.button.radius.alert{type: 'button', value: 'Remove Negatives'}
  .small-3.small-offset-2.columns
    %input#removePositives.small.button.radius.alert{type: 'button', value: 'Remove Positives'}
  .small-2.columns
.row
  .small-12.columns
    %h4 History
  .small-12.columns
    %ul#history
