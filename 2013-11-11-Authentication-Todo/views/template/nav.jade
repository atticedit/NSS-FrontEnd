.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") The Todo to End All Todos
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
        li.divider
        li: a(href='/') Home
      ul.right
        if user
          li.has-form: a#authentication-button.button.radius.alert(href="#", data-email=user.email)= user.email
        else
          li.has-form: a#authentication-button.button.radius(href="#", data-email="anonymous") Login | Sign Up