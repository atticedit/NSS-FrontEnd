extends ../template/layout

block content
  .row
    .small-12.columns
      #songs
        each song in songs
          .song
            a(href='/songs/#{song.id}'): p#title= song.title
            .row
              .small-6.columns
                a(href='/songs/#{song.id}'): img#art(src=song.art)
              .small-2.columns
                form(action='/songs/#{song.id}/edit', method='post')
                  input(type='hidden', name='_method', value='put')
                  button.small.radius.expand(type='submit') Edit
              .small-2.columns
                form(action='/songs/#{song.id}', method='post')
                  input(type='hidden', name='_method', value='delete')
                  button.small.radius.alert.expand(type='submit') Delete
              .small-2.columns
