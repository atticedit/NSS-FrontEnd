extends ../template/layout

block content
  .row
    .small-12.columns
      #songs
        each song in songs
          .song
            .row
              .small-3.columns
                a(href='/songs/#{song.id}'): img#thumbnail(src=song.art)
              .small-5.columns
                a(href='/songs/#{song.id}'): p#title=song.title
              .small-2.columns
                a.button.small.radius.expand(href='/songs/#{song.id}/edit') Edit
              .small-2.columns
                form(action='/songs/#{song.id}', method='post')
                  input(type='hidden', name='_method', value='delete')
                  button.small.radius.alert.expand(type='submit') Delete
