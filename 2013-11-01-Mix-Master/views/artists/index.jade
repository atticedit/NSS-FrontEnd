extends ../template/layout

block content
  .row
    .small-12.columns
      #artists
        each artist in artists
          .artist
            a(href='/artists/#{artist.id}'): p#name= artist.name
            a(href='/artists/#{artist.id}'): img#photo(src=artist.photo)
            form(action='/artists/#{artist.id}', method='post')
              input(type='hidden', name='_method', value='delete')
              button.small.radius.alert(type='submit') Delete