extends ../template/layout

block content
  .row
    .small-12.columns
      .artist
        p#name=artist.name
        img#photo(src=artist.photo)
        .row
          .small-2.columns
            span: a.button.small.radius.expand(href='/artists/#{artist.id}/edit') Edit
          .small-2.columns
            form(action='/artists/#{artist.id}', method='post')
              input(type='hidden', name='_method', value='delete')
              button.small.radius.alert.expand(type='submit') Delete
          .small-8.columns
        p#website <span>Website:</span>
          a(href='#{artist.website}') #{artist.website}
        ul <span>Bio:</span>
          li= artist.bio
        ul <span>Songs:</span>
          each song in artist.songs
            li= artist.song.name
        p= artist.createdAt

