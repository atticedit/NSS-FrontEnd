extends ../template/layout

block content
  .row
    .small-12.columns
      .artist
        p#name= artist.name
        img#photo(src=artist.photo)
        form(action='/artists/#{artist.id}', method='post')
          input(type='hidden', name='_method', value='delete')
          button.small.radius.alert(type='submit') Delete
        p#website <span>Website:</span> #{artist.website}
        ul <span>Bio:</span>
          li= artist.bio
        ul <span>Songs:</span>
          //- each song in songs
          //-   li= artist.song.id
        p= artist.createdAt
