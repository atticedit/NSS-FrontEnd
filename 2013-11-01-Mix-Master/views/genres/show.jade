extends ../template/layout

block content
  .row
    .small-12.columns
      .genre
        p#name=genre.name
        .row
          .small-2.columns
            span: a.button.small.radius.expand(href='/genres/#{genre.id}/edit') Edit
          .small-2.columns
            form(action='/genres/#{genre.id}', method='post')
              input(type='hidden', name='_method', value='delete')
              button.small.radius.alert.expand(type='submit') Delete
          .small-8.columns
        ul <span>Songs:</span>
          each song in genre.songs
            li=song.title
        p= genre.createdAt