extends ../template/layout

block content
  .row
    .small-12.columns
      ul#genres
        each genre in genres
          li
            .row
              .small-2.columns
                span: a(href='/genres/#{genre.id}')=genre.name
              .small-2.columns
                span: a.button.small.radius.expand(href='/genres/#{genre.id}/edit') Edit
              .small-2.columns
                form(action='/genres/#{genre.id}', method='post')
                  input(type='hidden', name='_method', value='delete')
                  button.small.radius.alert.expand(type='submit') Delete
              .small-6.columns