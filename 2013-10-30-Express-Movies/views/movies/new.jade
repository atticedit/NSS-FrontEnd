extends ../template/layout
include ../mixins/form-helper.jade

block content
  .row
    .small-12.columns
      h1 Cinematic App
  .row
    .small-12.columns
      h3 Add a Movie
  .row
    .small-2.columns
      a.button.small.radius.expand(href='/') Home
    .small-2.columns
      a.button.small.radius.expand(href='/movies') Movies
    .small-8.columns
  .row
    .small-4.columns
      form(action='/movies', method='post')
        mixin field('title', 'Title', 'title', true)
        mixin field('image', 'Image', 'image')
        mixin field('color', 'Color', 'color')
        mixin field('rated', 'Rated', 'rated')
        mixin field('studio', 'Studio', 'studio')
        mixin field('gross', 'Gross', 'gross')
        mixin field('numTheatres', 'Number of Theatres', 'numTheatres')
        button.small.radius.expand(type='submit') Save Movie
